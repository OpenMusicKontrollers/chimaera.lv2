# Filter Plugin
chim:filter
	a lv2:Plugin,
		lv2:ConverterPlugin;
	doap:name "Chimaera Filter" ;
	doap:license lic:Artistic-2.0 ;
	lv2:project proj:chimaera ;
	lv2:optionalFeature lv2:isLive, lv2:hardRTCapable ;

	# input event port
	lv2:port [
	  a lv2:InputPort ,
			atom:AtomPort ;
		atom:bufferType atom:Sequence ;
		atom:supports chim:Event ;
		lv2:index 0 ;
		lv2:symbol "event_int" ;
		lv2:name "Event Input" ;
	] ;

	# input control ports
	lv2:port [
	  a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 1 ;
		lv2:symbol "group_sel" ;
		lv2:name "Group Select" ;
		lv2:default 0.0 ;
		lv2:minimum 0.0 ;
		lv2:maximum 8.0 ;
		lv2:portProperty lv2:integer ;
	] ;

	lv2:port [
	  a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 2 ;
		lv2:symbol "north_sel" ;
		lv2:name "North Polarity Select" ;
		lv2:default 1.0 ;
		lv2:portProperty lv2:toggled ;
	] ;

	lv2:port [
	  a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 3 ;
		lv2:symbol "south_sel" ;
		lv2:name "South Polarity Select" ;
		lv2:default 1.0 ;
		lv2:portProperty lv2:toggled ;
	] ;

	# output event port
	lv2:port [
	  a lv2:OutputPort ,
			atom:AtomPort ;
		atom:bufferType atom:Sequence ;
		atom:supports chim:Event ;
		lv2:index 4 ;
		lv2:symbol "event_out" ;
		lv2:name "Event Output" ;
	] .

