# Comm Plugin
chim:comm
	a lv2:Plugin,
		lv2:ConverterPlugin;
	doap:name "Chimaera Comm" ;
	doap:license lic:Artistic-2.0 ;
	lv2:project proj:chimaera ;
	lv2:extensionData work:interface, state:interface ;
	lv2:optionalFeature lv2:isLive, lv2:hardRTCapable, osc:schedule ;
	lv2:requiredFeature urid:map, work:schedule ;

	lv2:port [
	# input event port
	  a lv2:InputPort ,
			atom:AtomPort ;
		atom:bufferType atom:Sequence ;
		atom:supports atom:Object ;
		atom:supports osc:Event ;
		lv2:index 0 ;
		lv2:symbol "osc_in" ;
		lv2:name "OSC Input" ;
		lv2:designation lv2:control ;
	] , [
	# output event port
	  a lv2:OutputPort ,
			atom:AtomPort ;
		atom:bufferType atom:Sequence ;
		atom:supports atom:Object ;
		atom:supports osc:Event ;
		lv2:index 1 ;
		lv2:symbol "event_out" ;
		lv2:name "Event Output" ;
		lv2:designation lv2:control ;
	] , [
	# reset input port
	  a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 2 ;
		lv2:symbol "reset" ;
		lv2:name "TUIO2 Reset" ;
		lv2:default 0.0 ;
		lv2:minimum 0.0 ;
		lv2:maximum 1.0 ;
		lv2:portProperty lv2:toggled ;
	] , [
	# through input port
	  a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 3 ;
		lv2:symbol "through" ;
		lv2:name "OSC Through" ;
		lv2:default 0.0 ;
		lv2:minimum 0.0 ;
		lv2:maximum 1.0 ;
		lv2:portProperty lv2:toggled ;
	] , [
	# comm state
	  a lv2:OutputPort ,
			lv2:ControlPort ;
		lv2:index 4 ;
		lv2:symbol "comm_state" ;
		lv2:name "Comm State" ;
		lv2:default 0.0 ;
		lv2:minimum 0.0 ;
		lv2:maximum 4.0 ;
		lv2:portProperty lv2:integer ;
		lv2:portProperty lv2:enumeration ;
		lv2:scalePoint [ rdfs:label "Idle" ;					rdf:value 0 ] ;
		lv2:scalePoint [ rdfs:label "Ready" ;					rdf:value 1 ] ;
		lv2:scalePoint [ rdfs:label "Timedout" ;			rdf:value 2 ] ;
		lv2:scalePoint [ rdfs:label "Errored" ;				rdf:value 3 ] ;
		lv2:scalePoint [ rdfs:label "Connected" ;			rdf:value 4 ] ;
	] , [
	# data state
	  a lv2:OutputPort ,
			lv2:ControlPort ;
		lv2:index 5 ;
		lv2:symbol "data_state" ;
		lv2:name "Data State" ;
		lv2:default 0.0 ;
		lv2:minimum 0.0 ;
		lv2:maximum 4.0 ;
		lv2:portProperty lv2:integer ;
		lv2:portProperty lv2:enumeration ;
		lv2:scalePoint [ rdfs:label "Idle" ;					rdf:value 0 ] ;
		lv2:scalePoint [ rdfs:label "Ready" ;					rdf:value 1 ] ;
		lv2:scalePoint [ rdfs:label "Timedout" ;			rdf:value 2 ] ;
		lv2:scalePoint [ rdfs:label "Errored" ;				rdf:value 3 ] ;
		lv2:scalePoint [ rdfs:label "Connected" ;			rdf:value 4 ] ;
	] , [
	# input control port
	  a lv2:InputPort ,
			atom:AtomPort ;
		atom:bufferType atom:Sequence ;
		atom:supports atom:Object ;
		lv2:index 6 ;
		lv2:symbol "control" ;
		lv2:name "Control" ;
		rsz:minimumSize 4096 ;
	] , [
	# output notify port
	  a lv2:OutputPort ,
			atom:AtomPort ;
		atom:bufferType atom:Sequence ;
		atom:supports atom:Object ;
		lv2:index 7 ;
		lv2:symbol "notify" ;
		lv2:name "Notify" ;
		rsz:minimumSize 4096 ;
	] .
